<div class="container grow-2">
	<h2>Liste des devis</h2>
	<div class="quotes-list box-shadow">
		<table>
			<thead class="head">
				<tr>
					<th>N° Devis</th>
					<th>Référence</th>
					<% unless no_col %>
						<th>Client</th>
					<% end %>
					<th>Statut</th>
					<th>Prix</th>
				</tr>
			</thead>
			<tbody class="body">
				<% quotes.each do |quote| %>
					<tr data-link="<%= quote_path(quote) %>" class="row">
						<td id="id">
							<%= link_to(quote.id, quote_path(quote)) %>
						</td>
						<td id="ref">
							<%= link_to(quote.references, quote_path(quote)) %>
						</td>
						<% unless no_col %>
							<% if current_user.third_party.manufacturer? %>
								<td>
									<%= link_to(quote.relation.client.name, quote_path(quote)) %>
								</td>
							<% else %>
								<td>
									<%= link_to(quote.final_client.name, quote_path(quote)) %>
								</td>
							<% end %>
						<% end %>
						<td>
							<%= link_to(quote_path(quote)) do %>
								<span class="state <%= quote.state[:class] %>"><%= quote.state[:name] %></span>
							<% end %>
						</td>
						<td>
							<%= link_to(quote_path(quote)) do %>
								<%= humanized_money(quote.price) %> <%= currency_symbol %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
